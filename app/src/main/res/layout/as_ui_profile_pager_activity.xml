<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                android:layout_height="match_parent" android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentContainer" android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <View
            android:layout_width="0dip" android:layout_height="?attr/actionBarSize"
            android:background="#66ffffff"/>

        <View
            android:id="@+id/viewToolbar" android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" android:alpha="0"/>

        <include
            layout="@layout/comm_lay_toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"/>
    </RelativeLayout>
</RelativeLayout>
